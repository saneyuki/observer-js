{
    // ESLint Configuration Files enables to include comments.
    // http://eslint.org/docs/configuring/#comments-in-configuration-files
    "env": {
        "node": true
    },

    "rules": {
        // Possible Errors
        "no-comma-dangle": 0,
        "no-constant-condition": 1,
        "no-debugger": 1,
        "no-extra-boolean-cast": 0,
        "no-extra-parens": 0,
        "valid-jsdoc": [2, {
            "requireReturn": true,
            "requireParamDescription": false
        }],

        // Best Practices
        "block-scoped-var": 1,
        "curly": 2,
        "no-alert": 1,
        "no-caller": 1,
        "no-div-regex": 2,
        "no-eq-null": 2,
        "no-unused-expressions": 2,
        "radix": 2,

        // Strict Mode
        "strict": [2, "global"],

        // Variables
        "no-shadow": 2,
        "no-unused-vars": 2,
        "no-use-before-define": 2,

        // Stylistic Issues
        "indent": [2, 4, {
            "indentSwitchCase": true
        }],
        "comma-spacing": [2, {
            "before": false,
            "after": true
        }],
        "comma-style": [2, "last"],
        "no-mixed-spaces-and-tabs": 2,
        "quotes": [2, "double", "avoid-escape"],
        "semi": [2, "always"],
        "space-unary-ops": [2, {
            "words": true,
            "nonwords": false
        }],
        "spaced-line-comment": 2,

        // ECMAScript 6
        "generator-star": [2, "start"]
    }
}
